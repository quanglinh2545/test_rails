<%= form_with(model: manga, local: true) do |form| %>
  <% if manga.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(manga.errors.count, "error") %> prohibited this manga from being saved:</h2>

      <ul>
        <% manga.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>


  <section class="contact_area">
        <div class="container">  
            <form class="row from_main" action="http://themazine.com/html/mora-blog/php/contact.php" method="post" id="phpcontactform" novalidate="novalidate"> 
                <div class="form-group col-md-6">
                     <%= form.label :title %>
                      <%= form.text_field :title, :class => 'form-control', :placeholder => 'Title' %>
                </div> 
                 <div class="form-group col-md-6">
                    <%= form.label :author %>
                     <%= form.text_field :author, :class => 'form-control', :placeholder => 'Author' %>
                </div> 
                 <div class="form-group col-md-6">
                    <%= form.label :genre %>
                     <%= form.text_field :genre, :class => 'form-control', :placeholder => 'Genre' %>
                </div> 
                 
                <div class="form-group col-md-6">    
                </div>
                <div class="form-group col-12">
                      <%= form.label :detail %>
                     <%= form.text_area :detail, :class => 'form-control', :placeholder => 'Detail' %>
                </div>
                  <div class="field">
                    <%= form.label :image %>
                    <%= form.file_field :image %><br>
                  </div>
                    <div class="actions">
                    <%= form.submit %>
                  </div>
            </form> 
        </div>
    </section>
<% end %>
